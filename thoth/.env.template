# Thoth Configuration Settings
# Copy this file to .env and modify as needed

# Database Settings
# Path to the DuckDB database file
THOTH_DB_PATH=telegram_data.db
# Phone number for user-specific tables (optional)
THOTH_PHONE=+31627866359

# Qdrant Settings
# Mode can be "local" or "remote"
THOTH_QDRANT_MODE=local
# Path for local Qdrant database
THOTH_QDRANT_PATH=./qdrant_db
# URL for remote Qdrant instance (used if mode is "remote")
THOTH_QDRANT_URL=http://localhost:6333
# API key for remote Qdrant instance (if required)
THOTH_QDRANT_API_KEY=

# Embedding Model Settings
# Name of the sentence-transformers model to use
THOTH_EMBEDDING_MODEL=all-MiniLM-L6-v2
# Size of embedding vectors (must match the model's output size)
THOTH_VECTOR_SIZE=384

# Logging Settings
# Log level (DEBUG, INFO, NICE, WARNING, ERROR, CRITICAL)
THOTH_LOG_LEVEL=INFO
# Log file path (optional, logs to console if not specified)
THOTH_LOG_FILE=thoth.log 